<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cjmex.coffeesp.mvp.totalsales.TotalSalesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <view
            android:id="@+id/convenient_banner"
            class="com.cjmex.coffeesp.view.banner.ConvenientBanner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <view
            android:id="@+id/chart1"
            class="com.github.mikephil.charting.charts.LineChart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp" />
        <view
            android:id="@+id/chart2"
            class="com.github.mikephil.charting.charts.LineChart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp" />

        <view
            android:id="@+id/chart3"
            class="com.github.mikephil.charting.charts.LineChart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>



</ScrollView>
